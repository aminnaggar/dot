# ~/.bashrc: executed by bash(1) for non-login shells.

# Much Better 
LS_COLORS='ow=01;35;40'
export LS_COLORS

# X-server stuff
export DISPLAY=$(cat /etc/resolv.conf | grep nameserver | awk '{print $2; exit;}'):0.0


# Sensible history

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=3000
HISTFILESIZE=5000


# fnm
export PATH=/home/mufossa/.fnm:$PATH
eval "`fnm env`"

# sfdx
# export PATH=/home/mufossa/sfdx/bin:$PATH

# go-lang bins
export PATH=/home/mufossa/go/bin:$PATH
export GOPATH=$HOME/go
export GO111MODULE=on

# vim mode
# set -o vi
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"
function gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

# Lunar Vim happens to be installed here
export PATH="$PATH:$HOME/.local/bin"



# Codi
# Usage: codi [filetype] [filename]
codi() {
  local syntax="${1:-javascript}"
  shift
  lvim -c \
    "let g:dashboard_disable_at_vimenter = 1 |\
    set bt=nofile ls=0 noru nonu nornu |\
    hi ColorColumn ctermbg=NONE |\
    hi VertSplit ctermbg=NONE |\
    hi NonText ctermfg=0 |\
    Codi $syntax" "$@"
}


# Python environment setup
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

export PATH=$PATH:$HOME/.poetry/bin

