#!/bin/bash
{{$sudo := "sudo " -}}
{{if eq .chezmoi.username "root" -}}
{{  $sudo = "" -}}
{{end -}}

# using downloadExtract from .functions
{{include ".chezmoiscripts/.functions" }}

{{  if eq .ostype "debian" -}}
# Debian systems
# ============================================================
{{    $packages := list
        "curl"
        "jq"
        "make"
        "neovim"
        "ripgrep"
        "units"
        "python3"
        "python3-pip"
        "golang"
        "unzip"
        "git"
        "zsh"
        "ranger" -}}


set -eufo pipefail

{{$sudo}}add-apt-repository -y ppa:longsleep/golang-backports


{{$sudo}}apt-get update
{{$sudo}}apt-get install -y {{ $packages | join " " }}

# set zsh as the main shell
{{$sudo}}chsh -s $(which zsh) {{.chezmoi.username}}

{{ else if eq .ostype "darwin" -}}
# OSX - Darwin
# ============================================================
# zsh comes default with osx
brew install ripgrep
brew install neovim
{{ end -}}


{{ if or (eq .ostype "debian") (eq .ostype "darwin") -}}
# Install Runtimes
# ============================================================

# Install Rust using rustup
# -------------------------------
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# Install Node + fnm
# -------------------------------
curl -fsSL https://fnm.vercel.app/install | bash -s -- --skip-shell
export PATH=$HOME/.local/share/fnm:$PATH
eval "`fnm env`"
fnm install --lts
fnm use lts/latest

# Install Applications
# ============================================================

# Install Lazygit
# -------------------------------
lazygit_version=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | grep -Po '"tag_name": "v\K[^"]*')
lazygit_folder=$(downloadExtract lazygit "https://github.com/jesseduffield/lazygit/releases/latest/download/lazygit_${lazygit_version}_Linux_x86_64.tar.gz")
{{$sudo}}install $lazygit_folder/lazygit $HOME/.local/bin


# Install git tools
# -------------------------------
npm install -g diff-so-fancy
sudo pip install diff-highlight

{{ end -}}